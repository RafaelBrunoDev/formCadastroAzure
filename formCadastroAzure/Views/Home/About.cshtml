@model List<tbl_Cadastro>

<style>
    /* Estilos da tabela */
    .table-cadastros {
        width: 100%;
        border-collapse: collapse;
    }

        .table-cadastros th, .table-cadastros td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table-cadastros th {
            background-color: #f2f2f2;
        }

        .table-cadastros tr:hover {
            background-color: #f5f5f5;
        }
</style>


<h2>Cadastros Feitos</h2>

<table class="table-cadastros">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Celular</th>
            <th>Pais</th>
            <th>Cidade</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cadastro in Model)
        {
            <tr>
                <td>@cadastro.Nome</td>
                <td>@cadastro.Celular</td>
                <td>@cadastro.Pais</td>
                <td>@cadastro.Cidade</td>
                <td>@cadastro.Estado</td>
            </tr>
        }
    </tbody>
</table>

